{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "DOS32 Clean Build",
			"type": "shell",
			"command": "cd ${workspaceFolder}; wmake clean; wmake",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "DOS32 Build",
			"type": "shell",
			"command": "cd ${workspaceFolder}; wmake",
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "DOS32 Clean",
			"type": "shell",
			"command": "cd ${workspaceFolder}; wmake clean",
			"group": {
				"kind": "build",
				"isDefault": false
			}
		}
	]
}
